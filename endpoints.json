{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api",
    "queries": [],
    "exampleResponse": {
      "endpoints": {
        "GET /api/topics": {
          "description": "some description",
          "queries": []
        }
      }
    }
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles. default ordering by date created, in descending order",
    "queries": [
      "author",
      "topic",
      "sort_by = created_at",
      "order = desc"
    ],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "linktoimage.com/image.jpg",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles?topic=cooking": {
    "description": "retrieves all articles which have the value in their topic column",
    "queries": [],
    "exampleResponse": [
      {
        "article_id": 1,
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "linktoimage.com/image.jpg",
        "comment_count": 6
      }
    ]
  },
  "GET /api/articles/:article_id": {
    "description": "retrieves a single article based on its ID",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 10,
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https//pathtoimage?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "retrieves all comments for a particular article by its ID, order from most recent",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 9,
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z",
          "author": "icellusedkars",
          "body": "Superficially charming",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment onto an article if the user is valid",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 19,
          "body": "Superficially charming",
          "article_id": 7,
          "author": "rogersop",
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "update an article's values of votes",
    "queries": ["comments"],
    "exampleResponse": {
      "updatedArticle": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 110,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "remove a comment from the comments table through its ID",
    "queries": [],
    "exampleResponse": {
      "status": 204
    }
  },
  "GET /api/users": {
    "description": "retrieves all users and their information",
    "queries": [],
    "exampleResponse": {
      "username": "Scarface",
      "name": "Harry Potter",
      "avatar_url": "https://hogwartsdirectory.com/?w=700&h=700"
